                    <set name="DWZ_CALLBACK_TYPE"   value="forward"/>
                    <set name="DWZ_FORWARD_URL"     value="568300.lim"/>
                    <set name="DWZ_RSP_MSG"         expr="RSPMSG"/>
                    <return/>
