         <set name="DWZ_STATUS_CODE"   expr="DWZ_ERROR_CODE"/>
         <set name="DWZ_RSP_MSG"       expr="RSPMSG"/>
         <return/>
       </if>
       <elseif condition="#RetCod==2">
         <set name="RSPCOD"            value="02050"/>
